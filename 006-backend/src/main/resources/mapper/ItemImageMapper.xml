<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.mapper.ItemImageMapper">
    
    <resultMap id="BaseResultMap" type="com.xiaou.entity.ItemImage">
        <id column="id" property="id"/>
        <result column="item_type" property="itemType"/>
        <result column="item_id" property="itemId"/>
        <result column="image_url" property="imageUrl"/>
        <result column="sort" property="sort"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="findByItem" resultMap="BaseResultMap">
        SELECT * FROM item_image 
        WHERE item_type = #{itemType} AND item_id = #{itemId}
        ORDER BY sort ASC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO item_image (item_type, item_id, image_url, sort)
        VALUES (#{itemType}, #{itemId}, #{imageUrl}, #{sort})
    </insert>

    <delete id="deleteById">
        DELETE FROM item_image WHERE id = #{id}
    </delete>

    <delete id="deleteByItem">
        DELETE FROM item_image WHERE item_type = #{itemType} AND item_id = #{itemId}
    </delete>

</mapper>


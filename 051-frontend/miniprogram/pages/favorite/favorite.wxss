.article-item { display: flex; padding: 20rpx; }
.article-cover { width: 200rpx; height: 140rpx; border-radius: 8rpx; flex-shrink: 0; }
.article-info { flex: 1; margin-left: 20rpx; display: flex; flex-direction: column; justify-content: space-between; }

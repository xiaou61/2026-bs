<view class="container">
  <view class="banner">
    <swiper autoplay circular indicator-dots>
      <swiper-item>
        <image src="/static/banner/banner1.png" mode="aspectFill"></image>
      </swiper-item>
      <swiper-item>
        <image src="/static/banner/banner2.png" mode="aspectFill"></image>
      </swiper-item>
    </swiper>
  </view>

  <view class="category-section">
    <view class="section-title">知识分类</view>
    <view class="category-grid">
      <view class="category-item" wx:for="{{categories}}" wx:key="id" bindtap="goCategory" data-id="{{item.id}}" data-name="{{item.name}}">
        <image src="{{item.icon || '/static/icons/default.png'}}" mode="aspectFit"></image>
        <text>{{item.name}}</text>
      </view>
    </view>
  </view>

  <view class="article-section">
    <view class="section-title flex-between">
      <text>推荐文章</text>
      <text class="more text-primary" bindtap="goMore">更多</text>
    </view>
    <view class="article-list">
      <view class="article-item card" wx:for="{{articles}}" wx:key="id" bindtap="goArticle" data-id="{{item.id}}">
        <image class="article-cover" src="{{item.cover || '/static/default.png'}}" mode="aspectFill"></image>
        <view class="article-info">
          <view class="article-title">{{item.title}}</view>
          <view class="article-meta text-small text-gray">
            <text>{{item.categoryName}}</text>
            <text class="meta-item">浏览 {{item.viewCount}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

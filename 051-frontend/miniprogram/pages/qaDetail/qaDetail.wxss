.post-title { font-size: 36rpx; font-weight: bold; margin-bottom: 16rpx; }
.post-user, .reply-user { display: flex; align-items: center; gap: 12rpx; margin-bottom: 16rpx; font-size: 26rpx; color: #666; }
.post-content, .reply-content { line-height: 1.6; margin-bottom: 16rpx; }
.section-title { font-size: 30rpx; font-weight: bold; margin: 30rpx 0 16rpx; }
.reply-item { padding: 20rpx; }
.reply-actions { font-size: 24rpx; color: #999; }
.reply-input { position: fixed; bottom: 0; left: 0; right: 0; display: flex; padding: 16rpx; background: #fff; border-top: 1rpx solid #eee; padding-bottom: calc(16rpx + env(safe-area-inset-bottom)); }
.reply-input input { flex: 1; background: #f5f5f5; border-radius: 8rpx; padding: 16rpx; margin-right: 16rpx; }

.login-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
}

.logo-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.form-area {
  padding: 40rpx 0;
}

.input-group {
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 24rpx 36rpx;
  margin-bottom: 30rpx;
}

.input-group input {
  height: 60rpx;
  font-size: 30rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 40rpx;
}

.wx-login {
  text-align: center;
  margin-top: 40rpx;
  padding: 20rpx;
}

.wx-login text {
  color: #4A90E2;
  font-size: 28rpx;
}

.footer {
  text-align: center;
  padding: 40rpx 0;
}

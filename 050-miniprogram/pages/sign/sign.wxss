.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
}

.task-detail {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.label {
  color: #999;
  width: 160rpx;
}

.value {
  flex: 1;
}

.sign-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.sign-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.sign-tip {
  color: #666;
  margin-bottom: 40rpx;
}

.sign-btn {
  width: 80%;
}

.location-info {
  margin-bottom: 30rpx;
  text-align: center;
}

.code-input {
  width: 80%;
  margin-bottom: 30rpx;
}

.code-input input {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 36rpx;
  letter-spacing: 10rpx;
}

.success-card {
  background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.success-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #4caf50;
  margin-bottom: 20rpx;
}

.success-status {
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-item input, .form-item .picker {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: bold;
}

.task-info {
  margin-bottom: 20rpx;
}

.task-action {
  display: flex;
  gap: 20rpx;
}

.task-action button {
  margin: 0;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
}

.container {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  background: #f0f0f0;
  color: #666;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  border: none;
}

/* 输入框样式 */
.input-group {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
}

.input-group input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
}

/* 状态标签 */
.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.tag-success {
  background: #e8f5e9;
  color: #4caf50;
}

.tag-warning {
  background: #fff3e0;
  color: #ff9800;
}

.tag-error {
  background: #ffebee;
  color: #f44336;
}

.tag-info {
  background: #e3f2fd;
  color: #2196f3;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 列表项 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

/* 通用间距 */
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-20 { margin-right: 20rpx; }
.p-20 { padding: 20rpx; }

/* 文字样式 */
.text-primary { color: #4A90E2; }
.text-success { color: #4caf50; }
.text-warning { color: #ff9800; }
.text-danger { color: #f44336; }
.text-gray { color: #999; }
.text-bold { font-weight: bold; }
.text-center { text-align: center; }
.text-small { font-size: 24rpx; }
.text-large { font-size: 32rpx; }

/* Flex布局 */
.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-center { justify-content: center; align-items: center; }
.flex-between { justify-content: space-between; }
.flex-around { justify-content: space-around; }
.flex-1 { flex: 1; }

/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 120rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.app-name {
  display: block;
  font-size: 32px;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 20rpx;
}

.slogan {
  display: block;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录区域 */
.login-section {
  width: 100%;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background-color: #FFFFFF;
  color: #333333;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.wx-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.9);
}

.agreement checkbox {
  margin-right: 8rpx;
}

.agreement .link {
  color: #FFFFFF;
  text-decoration: underline;
}

/* 底部装饰 */
.bottom-decoration {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
}

.version {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.6);
}

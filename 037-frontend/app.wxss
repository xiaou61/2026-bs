/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-size: 14px;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片 */
.card {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮 */
.btn-primary {
  background-color: #409EFF;
  color: #FFFFFF;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 16px;
}

.btn-secondary {
  background-color: #F5F5F5;
  color: #666666;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 16px;
}

/* 标题 */
.title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 14px;
  color: #999;
  margin-bottom: 8rpx;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-10 {
  margin-left: 10rpx;
}

.mr-10 {
  margin-right: 10rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 12px;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.tag-primary {
  background-color: #ECF5FF;
  color: #409EFF;
}

.tag-success {
  background-color: #F0F9FF;
  color: #67C23A;
}

.tag-warning {
  background-color: #FDF6EC;
  color: #E6A23C;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #E4E7ED;
  margin: 20rpx 0;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 14px;
}

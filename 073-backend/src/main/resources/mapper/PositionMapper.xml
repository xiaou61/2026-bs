<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrm.mapper.PositionMapper">
    <resultMap id="BaseResultMap" type="com.hrm.entity.Position">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="level" property="level"/>
        <result column="min_salary" property="minSalary"/>
        <result column="max_salary" property="maxSalary"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM position WHERE id = #{id}
    </select>

    <select id="selectList" resultMap="BaseResultMap">
        SELECT * FROM position
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY level DESC, create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM position WHERE status = 1 ORDER BY level DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO position (name, level, min_salary, max_salary, description, status, create_time)
        VALUES (#{name}, #{level}, #{minSalary}, #{maxSalary}, #{description}, #{status}, NOW())
    </insert>

    <update id="update">
        UPDATE position
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="level != null">level = #{level},</if>
            <if test="minSalary != null">min_salary = #{minSalary},</if>
            <if test="maxSalary != null">max_salary = #{maxSalary},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM position WHERE id = #{id}
    </delete>
</mapper>

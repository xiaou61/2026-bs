<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.wedding.mapper.PhotographerMapper">

    <resultMap id="BaseResultMap" type="com.xiaou.wedding.entity.Photographer">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="photo" column="photo"/>
        <result property="level" column="level"/>
        <result property="specialty" column="specialty"/>
        <result property="portfolio" column="portfolio"/>
        <result property="introduction" column="introduction"/>
        <result property="status" column="status"/>
        <result property="commissionRate" column="commission_rate"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM photographer WHERE id = #{id} AND deleted = 0
    </select>

    <select id="list" resultMap="BaseResultMap">
        SELECT * FROM photographer
        WHERE deleted = 0
        <if test="level != null and level != ''">AND level = #{level}</if>
        ORDER BY id DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO photographer (user_id, name, phone, photo, level, specialty, portfolio, introduction, status, commission_rate)
        VALUES (#{userId}, #{name}, #{phone}, #{photo}, #{level}, #{specialty}, #{portfolio}, #{introduction}, #{status}, #{commissionRate})
    </insert>

    <update id="update">
        UPDATE photographer
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="photo != null">photo = #{photo},</if>
            <if test="level != null">level = #{level},</if>
            <if test="specialty != null">specialty = #{specialty},</if>
            <if test="portfolio != null">portfolio = #{portfolio},</if>
            <if test="introduction != null">introduction = #{introduction},</if>
            <if test="status != null">status = #{status},</if>
            <if test="commissionRate != null">commission_rate = #{commissionRate},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="logicDelete">
        UPDATE photographer SET deleted = 1 WHERE id = #{id}
    </update>
</mapper>

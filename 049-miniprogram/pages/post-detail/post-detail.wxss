.post-header .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.post-content {
  font-size: 28rpx;
  line-height: 1.8;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.comment-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 16rpx 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.comment-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
}

.send-btn {
  background: #2196F3;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
}

.container {
  padding-bottom: 120rpx;
}

.cover {
  width: 100%;
  height: 400rpx;
}

.info-section .title {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 1.4;
}

.info-section .price {
  font-size: 40rpx;
  font-weight: bold;
}

.tabs {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #2196F3;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #2196F3;
  border-radius: 3rpx;
}

.chapter-item {
  display: flex;
  align-items: center;
}

.chapter-num {
  color: #2196F3;
  margin-right: 10rpx;
}

.play-btn {
  width: 60rpx;
  height: 60rpx;
  background: #2196F3;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

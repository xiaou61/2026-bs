.search-bar {
  background: #fff;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.search-bar input {
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
}

.subject-tabs {
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.tab-item.active {
  background: #2196F3;
  color: #fff;
}

.filter-bar {
  display: flex;
  margin-bottom: 20rpx;
}

.filter-item {
  padding: 10rpx 24rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-item.active {
  color: #2196F3;
  font-weight: bold;
}

.course-item {
  display: flex;
}

.course-item .cover {
  width: 240rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.course-item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-item .title {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.course-item .price {
  font-size: 30rpx;
  font-weight: bold;
}

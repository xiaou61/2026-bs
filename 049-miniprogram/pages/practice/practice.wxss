.progress-bar {
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
}

.progress {
  height: 100%;
  background: #2196F3;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  text-align: right;
  margin-bottom: 20rpx;
}

.question-type {
  margin-bottom: 20rpx;
}

.question-content {
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.option-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.option-item.selected {
  border-color: #2196F3;
  background: #E3F2FD;
}

.option-item.correct {
  border-color: #4CAF50;
  background: #E8F5E9;
}

.option-item.wrong {
  border-color: #F44336;
  background: #FFEBEE;
}

.option-label {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background: #2196F3;
  color: #fff;
}

.option-item.correct .option-label {
  background: #4CAF50;
  color: #fff;
}

.option-item.wrong .option-label {
  background: #F44336;
  color: #fff;
}

.option-text {
  flex: 1;
  line-height: 48rpx;
}

.analysis-card {
  background: #FFF8E1;
}

.analysis-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.analysis-answer {
  color: #2196F3;
  margin-bottom: 10rpx;
}

.analysis-content {
  color: #666;
  line-height: 1.6;
}

.btn-area {
  margin-top: 30rpx;
}

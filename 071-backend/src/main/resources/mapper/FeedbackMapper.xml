<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bike.mapper.FeedbackMapper">

    <resultMap id="BaseResultMap" type="com.bike.entity.Feedback">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="type" property="type"/>
        <result column="content" property="content"/>
        <result column="reply" property="reply"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="username" property="username"/>
    </resultMap>

    <sql id="Join_Query">
        SELECT f.*, u.username FROM feedback f LEFT JOIN user u ON f.user_id = u.id
    </sql>

    <select id="findList" resultMap="BaseResultMap">
        <include refid="Join_Query"/>
        <where>
            <if test="status != null">
                AND f.status = #{status}
            </if>
            <if test="type != null">
                AND f.type = #{type}
            </if>
        </where>
        ORDER BY f.create_time DESC
    </select>

    <select id="findByUserId" resultMap="BaseResultMap">
        <include refid="Join_Query"/>
        WHERE f.user_id = #{userId} ORDER BY f.create_time DESC
    </select>

    <select id="findById" resultMap="BaseResultMap">
        <include refid="Join_Query"/>
        WHERE f.id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO feedback (user_id, type, content, status)
        VALUES (#{userId}, #{type}, #{content}, 0)
    </insert>

    <update id="updateReply">
        UPDATE feedback SET reply = #{reply}, status = 1 WHERE id = #{id}
    </update>

</mapper>
